// Integers in each row are sorted in ascending from left to right.
// Integers in each column are sorted in ascending from top to bottom.

class Solution {
public:
    bool searchMatrix(vector<vector<int>>& ma, int target) {
            int n = ma.size();
            int m = ma[0].size();
            int r=0, c=m-1;
            while(r<n && c>=0)
            {
                    if(ma[r][c]==target)
                            return true;
                    else if(ma[r][c]>target)
                            c--;
                    else
                            r++;
            }
        return false;
    }
};
